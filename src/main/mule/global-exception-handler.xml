		<logger level="ERROR" doc:name="Logger" doc:id="38a64b5e-5af7-4827-96b9-1b197daf13d9" message="response': #[vars.httpStatus], 'errorCode': #[payload], 'errorMessage': #[if (vars.errorMessage != null)  vars.errorMessage else ' '], 'errorDescription': #[if (vars.errorDescription != null) vars.errorDescription else ' ']" category="Audit" />
		<ee:transform doc:name="Create Error Message" doc:id="ee980372-1189-4705-8358-5082f70f6235" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json  
---
{
  error: {
    errorCode: vars.httpStatus default 500,
    errorDateTime: now() as String {format: "yyyy-MM-dd'T'HH:mm:ssZ"},
    errorMessage: vars.errorMessage,
    errorDescription: error.description as String
  }
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
